<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, class: 'button button-primary u-pull-right' %>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3" width="10%"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post, class: 'button' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'button' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
